<Window x:Class="Assignment1.Views.AddDebtWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:local="clr-namespace:Assignment1.ViewModels"
        mc:Ignorable="d"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="AddDebtWindow" Height="250" Width="300">
    <Grid>
        <Label HorizontalAlignment="Center" VerticalAlignment="Top" Margin="9">Debtors</Label>
        <TextBox VerticalAlignment="Top" Margin="9,35" />
        <Label HorizontalAlignment="Center" VerticalAlignment="Top" Margin="53">Initial Value</Label>
        <TextBox VerticalAlignment="Top" Margin="9,79" />
        <Button Content="Save" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,130,9,9" Width="100" Height="50"/>
        <Button Content="Close" Command="{Binding CloseAppCommand}" CommandParameter="{Binding ElementName=AddDebtWindow}" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="9,130,20,9" Width="100" Height="50"/>
    </Grid>
</Window>
